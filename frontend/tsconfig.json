{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noUncheckedIndexedAccess": false,
        /* Path Aliases */
        "baseUrl": "./src",
        "paths": {
            /* Feature Folders */
            "$browser/*": [
                "lib/features/browser/*"
            ],
            "$diagram/*": [
                "lib/features/diagram/*"
            ],
            "$chatbot/*": [
                "lib/features/chatbot/*"
            ],
            "$auth/*": [
                "lib/features/auth/*"
            ],
            "$metadata/*": [
                "lib/features/metadata/*"
            ],
            "$interfaces/*": [
                "lib/features/interfaces/*"
            ],
            "$prototypes/*": [
                "lib/features/prototypes/*"
            ],
            /* Shared / Global */
            "$shared/*": [
                "lib/shared/*"
            ],
            "$hooks/*": [
                "lib/shared/hooks/*"
            ],
            "$state/*": [
                "lib/shared/state/*"
            ],
            "$lib/*": [
                "lib/*"
            ],
            "$assets/*": [
                "assets/*"
            ]
        },
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}