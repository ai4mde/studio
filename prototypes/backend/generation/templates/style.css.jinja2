{% elif styling.style_type == StyleType.ABSTRACT %}
body {
    font-family: 'Courier New', Courier, monospace;
    margin: 0;
    padding: 0;
    background: linear-gradient(45deg, {{ styling.background_color }}, {{ styling.accent_color }} );
    color: {{ styling.text_color }};
}

.header {
    background: {{ styling.accent_color }};
    padding: 20px;
    text-align: center;
    border-radius: {{ styling.radius }}px;
    margin: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
}

.header h1 {
    margin: 0;
    font-size: 32px;
    transform: rotate(-3deg);
}

.menu {
    width: 230px;
    background-color: {{ styling.accent_color }};
    padding: 20px;
    border-radius: {{ styling.radius }}px;
    float: left;
    height: 100vh;
    box-sizing: border-box;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
}

.menu a {
    text-decoration: none;
    padding: 12px 20px;
    display: block;
    border-radius: 50px;
    margin-bottom: 12px;
    background-color: {{ styling.accent_color }};
    text-align: center;
    transition: transform 0.3s, background-color 0.3s;
    max-width: 230px;
    max-height: 24px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.menu a:hover {
    background-color: {{ styling.background_color }};
    transform: scale(1.1);
}

.content {
    padding: 30px;
    margin-left: 250px;
    background-color: {{ styling.background_color }};
    border-radius: {{ styling.radius }}px;
    border: 5px dotted {{ styling.text_color }};
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 30px;
    border-radius: {{ styling.radius_color }}px;
    overflow: hidden;
    border: 3px dashed {{ styling.text_color }};
}

th, td {
    padding: 0;
    text-align: center;
    border: 2px solid {{ styling.text_color }};
}

th {
    background-color: {{ styling.accent_color }};
    font-size: 22px;
    text-align: center;
    padding: 16px;
}

td {
    text-align: center;
}

td input[type="text"], td input[type="number"], td select {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 12px;
    border: none;
    border-radius: 0;
    outline: none;
}

input[type="submit"] {
    background-color: {{ styling.accent_color }};
    border: 2px solid {{ styling.text_color }};
    padding: 10px;
    cursor: pointer;
    border-radius: {{ styling.radius }}px;
    transition: background-color 0.3s, transform 0.3s;
}

input[type="submit"]:hover {
    transform: rotate(-5deg);
}

form a {
    text-decoration: none;
    font-weight: bold;
}

{% endif %}
