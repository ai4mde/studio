{% if styling.style_type == StyleType.BASIC %}
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: {{ styling.background_color }};
    color: {{ styling.text_color }};
}

.header {
    background-color: {{ styling.accent_color }};
    padding: 15px;
    text-align: center;
    border-radius: {{ styling.radius }}px;
    margin: 10px;
}

.header h1 {
    margin: 0;
    font-size: 24px;
}

.menu {
    width: 200px;
    background-color: {{ styling.accent_color }};
    padding: 15px;
    border-radius: {{ styling.radius }}px;
    float: left;
    height: 100vh;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
}

.menu a {
    text-decoration: none;
    padding: 10px;
    display: block;
    border-radius: {{ styling.radius }}px;
    margin-bottom: 8px;
    text-align: center;
    max-width: 200px;
    max-height: 24px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.menu a:hover {
    background-color: {{ styling.background_color }};
}

.content {
    padding: 20px;
    margin-left: 220px;
    background-color: {{ styling.background_color }};
    border-radius: {{ styling.radius }}px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    border-radius: {{ styling.radius }}px;
    overflow: hidden;
}

th, td {
    padding: 0;
    text-align: left;
}

th {
    background-color: {{ styling.accent_color }};
    font-size: 18px;
    text-align: center;
    padding: 12px;
}

td input[type="text"], td input[type="number"], td select {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 8px;
    border: none;
    border-radius: 0;
    outline: none;
}

input[type="submit"] {
    background-color: {{ styling.accent_color }};
    border: none;
    padding: 10px;
    border-radius: {{ styling.radius }}px;
    cursor: pointer;
}

form a {
    text-decoration: none;
}

.process-item {
    background-color: {{ styling.background_color }};
    border-radius: {{ styling.radius }}px;
    padding: 20px;
    width: 350px;
    text-align: center;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.process-item:hover {
    transform: translateY(-5px);
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
}

.process-item h4 {
    margin: 0;
    padding: 0;
    font-size: 20px;
    color: {{ styling.text_color }};
    flex: 1;
    text-align: left;
    line-height: 1;
}

.process-button {
    background-color: {{ styling.accent_color }};
    color: {{ styling.text_color }};
    border: none;
    padding: 12px;
    border-radius: {{ styling.radius }}px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
    flex-shrink: 0;
}

.process-button:hover {
    background-color: {{ styling.text_color }};
    color: {{ styling.background_color }};
    transform: scale(1.05);
}

.no-processes {
    font-size: 18px;
    color: {{ styling.text_color }};
    text-align: left;
}

.active-node-name {
    font-size: 14px;
    color: {{ styling.text_color}};
    margin-top: 5px;
    text-align: left;
}

