{% if styling.style_type == StyleType.BASIC %}
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: {{ styling.background_color }};
    color: {{ styling.text_color }};
}

.header {
    background-color: {{ styling.accent_color }};
    padding: 15px;
    text-align: center;
    border-radius: {{ styling.radius }}px;
    margin: 10px;
}

.header h1 {
    margin: 0;
    font-size: 24px;
}

.menu {
    width: 200px;
    background-color: {{ styling.accent_color }};
    padding: 15px;
    border-radius: {{ styling.radius }}px;
    float: left;
    height: 100vh;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
}

.menu a {
    text-decoration: none;
    padding: 10px;
    display: block;
    border-radius: {{ styling.radius }}px;
    margin-bottom: 8px;
    text-align: center;
    max-width: 200px;
    max-height: 24px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.menu a:hover {
    background-color: {{ styling.background_color }};
}

.content {
    padding: 20px;
    margin-left: 220px;
    background-color: {{ styling.background_color }};
    border-radius: {{ styling.radius }}px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    border-radius: {{ styling.radius }}px;
    overflow: hidden;
}

th, td {
    padding: 0;
    text-align: left;
}

th {
    background-color: {{ styling.accent_color }};
    font-size: 18px;
    text-align: center;
    padding: 12px;
}

td input[type="text"], td input[type="number"], td select {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 8px;
    border: none;
    border-radius: 0;
    outline: none;
}

input[type="submit"] {
    background-color: {{ styling.accent_color }};
    border: none;
    padding: 10px;
    border-radius: {{ styling.radius }}px;
    cursor: pointer;
}

form a {
    text-decoration: none;
}

