{% raw %}{%{% endraw %} extends "{{ application_name }}_base.html" {% raw %}%}{% endraw %}
{% raw %}{% block content %}{% endraw %}
<h2>User Activity assignment</h2>


<table>
    <thead>
        <tr>
            <th>Active Process ID</th>
            <th>Process</th>
            <th>Action Node</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        {% raw %}{% for process in active_processes %}{% endraw %}
            {% raw %}{% if process == update_instance %}{% endraw %}
            <tr>
                {% raw %}
                <td>{{ process.id }}</td>
                <td>{{ process.process }}</td>
                <td>{{ process.active_node }}</td>
                {% endraw %}
                <td>
                    <form method="post" action="{% raw %}{%{% endraw %} url 'workflow_engine:change_user_assignment' process.id '{{ application_name }}' {% raw %}%}{% endraw %}">
                        {% raw %}{% csrf_token %}{% endraw %}
                        <select name="new_user" required>
                        {% raw %}
                            {% for user in possible_users %}
                                <option value="{{ user.id }}" {% if user == process.user %}selected{% endif %}>
                                    {{ user.username }}
                                </option>
                            {% endfor %}
                        {% endraw %}
                        </select>
                        
                </td>
                <td>
                        <input type="submit" value="Save"></input>
                </td>
                <td>
                        <a href="{% raw %}{%{% endraw %} url '{{ application_name }}:{{ application_name }}_change_user_assignment'{% raw %}%}{% endraw %}">Cancel</a>
                    </form>
                </td>
            </tr>
            {% raw %}{% else %}{% endraw %}
            <tr>
                {% raw %}
                <td>{{ process.active_process.id }}</td>
                <td>{{ process.active_process.process }}</td>
                <td>{{ process.action_node }}</td>
                <td>{{ process.user }}</td>
                {% endraw %}
                <td>
                    <form method="get" action="{% raw %}{%{% endraw %} url '{{ application_name }}:{{ application_name }}_change_user_assignment'{% raw %}%}{% endraw %}">
                        {% raw %}{% csrf_token %}{% endraw %}
                        <input type="hidden" name="update_instance_id" value="{% raw %}{{ process.id }}{% endraw %}">
                        <label style="cursor:pointer;">
                            <input type="submit" style="display:none;" />
                            <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </label>
                    </form>
                </td>
            </tr>
            {% raw %}{% endif %}{% endraw %}
        {% raw %}{% empty %}{% endraw %}
            <tr>
                <td colspan="7">No Active Processes found.</td>
            </tr>
        {% raw %}{% endfor %}{% endraw %}
    </tbody>
</table>
{% raw %}{% endblock %}{% endraw %}